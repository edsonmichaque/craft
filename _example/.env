# craft environment variables
CRAFT_CONFIG_FILE=/etc/craft/config.yml
CRAFT_CONFIG_FORMAT=yml

# Server configuration
CRAFT_SERVER_HOST=0.0.0.0
CRAFT_SERVER_PORT=8080
CRAFT_SERVER_READ_TIMEOUT=30s
CRAFT_SERVER_WRITE_TIMEOUT=30s

# Database configuration
CRAFT_DATABASE_HOST=localhost
CRAFT_DATABASE_PORT=5432
CRAFT_DATABASE_NAME=craft
CRAFT_DATABASE_USER=postgres
CRAFT_DATABASE_PASSWORD=postgres
CRAFT_DATABASE_SSL_MODE=disable

# Logger configuration
CRAFT_LOGGER_LEVEL=info
CRAFT_LOGGER_FORMAT=json
CRAFT_LOGGER_OUTPUT=stdout

# Binary-specific ports (for docker-compose)
CRAFT_craftd_PORT=8080
CRAFT_craftctl_PORT=8080
